<UserControl x:Class="Library.View.BookInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:view="clr-namespace:Library.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Popupbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
                <Setter Property="Margin" Value="0 8 0 8" />
            </Style>
            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MaterialDesignComboBox}">
                <Setter Property="Margin" Value="0 8 0 8" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <Border Background="{DynamicResource PrimaryHueMidBrush}" 
                DockPanel.Dock="Top"
                Padding="10 0 0 0"
                Margin="0 4 0 0"
                Height="36">
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Width="Auto" HorizontalAlignment="Right"
                    Margin="0 0 10 0"
                    Content="СОХРАНИТЬ"
                    Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                    FontWeight="ExtraLight"
                    FontSize="12"/>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="5">
                    <Grid>
                        <Border BorderBrush="Gray" BorderThickness="1 1 1 1">
                            <Image Name="bookImage"
                                   Source="{Binding Image}"/>
                        </Border>
                        <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
                                Height="35" Width="35" Click="AddPhoto_Click"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Margin="5">
                            <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
                        </Button>
                    </Grid>
                    <ComboBox>Статус</ComboBox>
                    <ComboBox Name="ratingComboBox"
                              BorderThickness="1"
                              Text="Оценка" />

                </StackPanel>

                <Grid Grid.Column="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="80"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Название" Grid.Column="0" Grid.Row="0"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />

                    <TextBlock Text="Автор" Grid.Column="0" Grid.Row="1"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />

                    <TextBlock Text="Серия" Grid.Column="0" Grid.Row="2"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />

                    <TextBlock Text="Жанр" Grid.Column="0" Grid.Row="3"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />

                    <TextBlock Text="Комментарий" Grid.Column="0" Grid.Row="4"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />

                    <TextBlock Text="Ссылка" Grid.Column="0" Grid.Row="5"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" />

                    <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap"/>
                    <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"/>
                    <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap"/>
                    <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap"/>
                    <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                    <TextBox Grid.Column="1" Grid.Row="5"/>

                </Grid>
            </Grid>
        </ScrollViewer>

    </DockPanel>
</UserControl>
